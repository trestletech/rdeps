{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "description": {
      "type": "string"
    },
    "regexp": {
      "type": "string",
      "minLength": 1
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "sysContraints": {
            "type": "array",
            "item": {
              "type": "object",
              "properties": {
                "os": {
                  "type": "string"
                },
                "flavor": {
                  "type": "string"
                },
                "arch": {
                  "type": "string"
                }
              },
              "anyOf": [
                {
                  "required": [
                    "os"
                  ]
                },
                {
                  "required": [
                    "flavor"
                  ]
                },
                {
                  "required": [
                    "arch"
                  ]
                }
              ]
            }
          },
          "pkgConstraint": {
            "type": "object",
            "properties": {
              "minVer": {
                "type": "string"
              },
              "minVerExclusive": {
                "type": "string"
              },
              "maxVer": {
                "type": "string"
              },
              "maxVerExclusive": {
                "type": "string"
              }
            },
            "dependencies": {
              "minVer": {
                "not": {
                  "required": [
                    "minVerExclusive"
                  ]
                }
              },
              "maxVer": {
                "not": {
                  "required": [
                    "maxVerExclusive"
                  ]
                }
              }
            },
            "anyOf": [
              {
                "required": [
                  "minVer"
                ]
              },
              {
                "required": [
                  "minVerExclusive"
                ]
              },
              {
                "required": [
                  "maxVer"
                ]
              },
              {
                "required": [
                  "maxVerExclusive"
                ]
              }
            ]
          },
          "sysPkgs": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "script": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "oneOf": [
          {
            "required": [
              "sysPkgs"
            ]
          },
          {
            "required": [
              "script"
            ]
          }
        ]
      },
      "minItems": 1
    }
  },
  "required": [
    "regexp",
    "dependencies"
  ]
}
